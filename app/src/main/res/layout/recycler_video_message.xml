<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20px">



    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="50px"
        android:background="@drawable/shape_bg_videomsg"
        android:orientation="horizontal"
        android:paddingBottom="14px"
        android:paddingRight="14px"
        android:paddingLeft="50px"
        android:paddingTop="14px">

        <TextView
            android:id="@+id/item_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:textColor="@color/color888"/>

        <com.gensee.view.MyTextViewEx
            android:id="@+id/item_rich_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20px"
            android:layout_toRightOf="@id/item_tv_name"
            android:textColor="@color/colorWhite"
            />
    </com.zhy.autolayout.AutoLinearLayout>
    <ImageView
        android:id="@+id/item_img_sex"
        android:layout_width="110px"
        android:layout_height="110px"
        android:src="@drawable/ic_man"/>
</com.zhy.autolayout.AutoRelativeLayout>