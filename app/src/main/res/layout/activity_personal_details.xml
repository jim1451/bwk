<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/title" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/itemHeight"
        android:background="@color/colorWhite"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="56px"
            android:text="姓名"
            android:textColor="@color/color333"
            android:textSize="@dimen/TextSize16" />

        <EditText
            android:id="@+id/edit_name"
            style="@style/editPerson"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:enabled="false"
            android:hint="请输入您的姓名" />
    </com.zhy.autolayout.AutoLinearLayout>

    <include layout="@layout/line" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/itemHeight"
        android:background="@color/colorWhite"
        android:enabled="false"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="56px"
            android:text="性别"
            android:textColor="@color/color333"
            android:textSize="@dimen/TextSize16" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="280px"
            android:layout_height="match_parent"
            android:layout_margin="30px"
            android:background="@drawable/bg_blue"
            android:enabled="false"
            android:orientation="horizontal"
            android:padding="1px">


            <TextView
                android:id="@+id/tv_sex_man"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1px"
                android:layout_weight="1"
                android:background="@drawable/select_type_left"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:text="男"
                android:textColor="@drawable/select_type_text"
                android:textSize="@dimen/TextSize" />

            <TextView
                android:id="@+id/tv_sex_woman"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="1px"
                android:layout_weight="1"
                android:background="@drawable/select_type_right"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:text="女"
                android:textColor="@drawable/select_type_text"
                android:textSize="@dimen/TextSize" />

        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoLinearLayout>

    <include layout="@layout/line" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/itemHeight"
        android:background="@color/colorWhite"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="56px"
            android:text="邮箱"
            android:textColor="@color/color333"
            android:textSize="@dimen/TextSize16" />

        <EditText
            android:id="@+id/edit_email"
            style="@style/editPerson"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
             android:hint="邮箱未绑定"
            android:inputType="textEmailAddress"
            android:textSize="@dimen/TextSize16" />
    </com.zhy.autolayout.AutoLinearLayout>

    <include layout="@layout/line" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/itemHeight"
        android:background="@color/colorWhite"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="56px"
            android:text="地址"
            android:textColor="@color/color333"
            android:textSize="@dimen/TextSize16" />
<!--            android:enabled="false"
-->
        <EditText
            android:id="@+id/edit_address"
            style="@style/editPerson"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="未填地址" />
    </com.zhy.autolayout.AutoLinearLayout>

    <include layout="@layout/line" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/itemHeight"
        android:background="@color/colorWhite"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="56px"
            android:text="手机"
            android:textColor="@color/color333"
            android:textSize="@dimen/TextSize16" />

        <TextView
            android:id="@+id/edit_mobile"
            style="@style/editPerson"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:enabled="false" />
    </com.zhy.autolayout.AutoLinearLayout>

    <include layout="@layout/line" />

    <TextView
        android:id="@+id/tv_saveUser"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:layout_marginLeft="60px"
        android:layout_marginRight="60px"
        android:layout_marginTop="100px"
        android:background="@drawable/selector_btn_login"
        android:gravity="center"
        android:text="保存"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/TextSize16"
        android:visibility="visible" />
</com.zhy.autolayout.AutoLinearLayout>
