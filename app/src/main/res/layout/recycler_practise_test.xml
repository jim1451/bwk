<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/item_line"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="40px"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="1px"
            android:layout_height="0dp"
            android:layout_weight="0.58"
            android:background="#059b76"/>

        <ImageView
            android:layout_width="25px"
            android:layout_height="25px"
            android:background="@drawable/dra_green_round"/>

        <TextView
            android:layout_width="1px"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="#059b76"/>
    </com.zhy.autolayout.AutoLinearLayout>
    <!--右侧-->
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="30px"
        android:paddingRight="20px"
        android:paddingTop="30px"
        >

        <TextView
            android:id="@+id/item_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="title"
            android:textColor="@color/color333"
            android:textSize="@dimen/TextSize16"/>

        <TextView
            android:id="@+id/item_tv_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:paddingBottom="10px"
            android:paddingTop="5px"
            android:text="msg"
            android:maxLines="2"
            android:textColor="@color/color888"
            android:textSize="@dimen/TextSize12"/>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_tv_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30px"
                android:text="1/1"
                android:textColor="@color/color888"
                android:textSize="@dimen/TextSize12"/>

            <TextView
                android:id="@+id/item_tv_isFree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30px"
                android:background="@drawable/shape_line_green"
                android:paddingBottom="5px"
                android:paddingLeft="20px"
                android:paddingRight="20px"
                android:paddingTop="5px"
                android:text="免费"
                android:textColor="#059B76"
                android:textSize="@dimen/TextSize11"/>

            <TextView
                android:id="@+id/item_tv_isVip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_line_orange"
                android:paddingBottom="5px"
                android:paddingLeft="20px"
                android:paddingRight="20px"
                android:paddingTop="5px"
                android:text="会员"
                android:textColor="#f88437"
                android:textSize="@dimen/TextSize11"/>

        </com.zhy.autolayout.AutoLinearLayout>

        <include layout="@layout/line"/>
    </com.zhy.autolayout.AutoLinearLayout>


</LinearLayout>