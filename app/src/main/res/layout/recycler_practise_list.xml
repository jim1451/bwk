<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/item_img"
        android:layout_width="200px"
        android:layout_height="200px"
        android:layout_margin="30px"
        android:src="@drawable/home_img_sys"
        app:layout_auto_baseheight="width" />


    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30px"
            android:singleLine="true"
            android:text="标题"
            android:textColor="@color/color333"
            android:textSize="@dimen/TextSize16" />

        <TextView
            android:id="@+id/item_tv_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:text="一句话描述"
            android:textColor="@color/color888"
            android:textSize="@dimen/TextSize13" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="30px"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="10px">


            <TextView
                android:id="@+id/item_tv_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="试卷"
                android:textColor="@color/color888"
                android:textSize="@dimen/TextSize13" />

            <TextView
                android:id="@+id/item_tv_isVipWrite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:background="@drawable/shape_line_isvip"
                android:gravity="center"
                android:paddingBottom="3px"
                android:paddingLeft="40px"
                android:paddingRight="40px"
                android:paddingTop="3px"
                android:text="会员"
                android:textColor="#F88437"
                android:textSize="@dimen/TextSize12" />

            <TextView
                android:id="@+id/item_tv_isVipFace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:background="@drawable/shape_line_isvip"
                android:gravity="center"
                android:paddingBottom="3px"
                android:paddingLeft="40px"
                android:paddingRight="40px"
                android:paddingTop="3px"
                android:text="面试会员"
                android:textColor="#F88437"
                android:textSize="@dimen/TextSize12" />

            <TextView
                android:id="@+id/item_tv_isFree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30px"
                android:background="@drawable/shape_line_notvip"
                android:paddingBottom="3px"
                android:paddingLeft="40px"
                android:paddingRight="40px"
                android:paddingTop="3px"
                android:text="免费"
                android:textColor="#059B76"
                android:textSize="@dimen/TextSize12" />


        </com.zhy.autolayout.AutoLinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_gravity="bottom"
            android:background="@color/colorLine" />
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>
