<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="40px"
    >

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="30px"
            >

            <TextView
                android:id="@+id/item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:text="11111"
                android:textColor="@color/color333"
                android:textSize="@dimen/TextSize"/>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5px"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30px"
                    android:background="@drawable/shape_line_green"
                    android:paddingBottom="5px"
                    android:paddingLeft="10px"
                    android:paddingRight="10px"
                    android:paddingTop="5px"
                    android:text=" 视频 "
                    android:textColor="#059B76"
                    android:textSize="@dimen/TextSize11"/>

                <TextView
                    android:layout_marginRight="30px"
                    android:id="@+id/item_isFree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_line_orange"
                    android:paddingBottom="5px"
                    android:paddingLeft="10px"
                    android:paddingRight="10px"
                    android:paddingTop="5px"
                    android:text="免费试学"
                    android:textColor="#f88437"
                    android:textSize="@dimen/TextSize11"/>
                <TextView
                    android:id="@+id/item_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/icon16"
                    android:drawablePadding="10px"
                    android:gravity="right"
                    android:text="时长：分钟"
                    android:textColor="@color/color888"
                    android:textSize="@dimen/TextSize12"/>

                <TextView
                    android:id="@+id/tv_item_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10px"
                    android:gravity="right"
                    android:paddingLeft="40px"
                    android:text=""
                    android:textColor="@color/color888"
                    android:textSize="@dimen/TextSize12"
                    android:visibility="gone"/>
            </com.zhy.autolayout.AutoLinearLayout>


        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/linear_download"
            style="@style/layout_wrap"
            android:layout_marginRight="30px"
            android:gravity="center_vertical"
            android:padding="5dp">

            <Button
                android:id="@+id/btn_item_operate"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/icon_download"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:visibility="gone"
                />

            <com.shixue.app.widget.RoundProgressBar
                android:id="@+id/pb_item_download"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_item_localplay"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/shape_vip"
                android:gravity="center"
                android:padding="6dp"
                android:text="本地播放"
                android:textColor="@color/colorWhite"
                android:textSize="12dp"
                android:visibility="gone"/>
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorLine"/>
</com.zhy.autolayout.AutoLinearLayout>