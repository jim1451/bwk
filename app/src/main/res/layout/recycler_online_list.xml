<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/item_line"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="40px"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="1px"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#059b76"/>

        <ImageView
            android:layout_width="25px"
            android:layout_height="25px"
            android:background="@drawable/dra_green_round"/>

        <TextView
            android:layout_width="1px"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="#059b76"/>
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="30px"
        android:paddingRight="30px"
        android:paddingTop="30px">

        <TextView
            android:id="@+id/item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="11111"
            android:textColor="@color/color333"
            android:textSize="@dimen/TextSize"/>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5px"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30px"
                android:background="@drawable/shape_line_green"
                android:paddingBottom="5px"
                android:paddingLeft="10px"
                android:paddingRight="10px"
                android:paddingTop="5px"
                android:text=" 视频 "
                android:textColor="#059B76"
                android:textSize="@dimen/TextSize11"/>

            <TextView
                android:id="@+id/item_isFree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_line_orange"
                android:paddingBottom="5px"
                android:paddingLeft="10px"
                android:paddingRight="10px"
                android:paddingTop="5px"
                android:text="免费试学"
                android:textColor="#f88437"
                android:textSize="@dimen/TextSize11"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon16"
                android:drawablePadding="10px"
                android:gravity="right"
                android:text="时长：分钟"
                android:textColor="@color/color888"
                android:textSize="@dimen/TextSize12"/>
        </com.zhy.autolayout.AutoLinearLayout>
        <TextView
            android:layout_marginTop="30px"
            android:background="@color/colorLine"
            android:layout_width="match_parent"
            android:layout_height="1px"/>

    </com.zhy.autolayout.AutoLinearLayout>


</com.zhy.autolayout.AutoLinearLayout>