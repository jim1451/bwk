<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="editPhone">
        <item name="android:background">@color/colorWhite</item>
        <item name="android:singleLine">true</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">11</item>
        <item name="android:textSize">@dimen/TextSize</item>
        <item name="android:textColorHint">@color/colorHint</item>
    </style>

    <style name="editSMS">
        <item name="android:background">@color/colorWhite</item>
        <item name="android:singleLine">true</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">6</item>
        <item name="android:textSize">@dimen/TextSize</item>
        <item name="android:textColorHint">@color/colorHint</item>
    </style>

    <style name="mainRadioBtn">
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">5px</item>
        <item name="android:textSize">@dimen/TextSize11</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@drawable/selector_text_main</item>
    </style>

    <style name="schoolRadioBtn">
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">5px</item>
        <item name="android:textSize">@dimen/TextSize12</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">20px</item>
        <item name="android:background">@drawable/selector_bg_school</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@drawable/selector_text_main</item>
    </style>

    <style name="editPerson">
        <item name="android:singleLine">true</item>
        <item name="android:textColorHint">@color/colorHint</item>
        <item name="android:textSize">@dimen/TextSize16</item>
        <item name="android:textColor">@color/color333</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:paddingLeft">60px</item>
        <item name="android:paddingRight">60px</item>
        <item name="android:background">@color/colorNull</item>
    </style>

    <style name="Dialog_notBG">
        <item name="android:windowBackground">@color/colorNull</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <style name="dialog_OpnePic">
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="anim_dialog_pics" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="@android:windowExitAnimation">@anim/dialog_exit</item>
    </style>

    <style name="roomRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_myrating</item>
        <item name="android:minHeight">40px</item>
        <item name="android:maxHeight">40px</item>
    </style>
    <!-- 圆角对话框 -->
    <style name="RoundDialog" parent="@android:style/Theme.NoTitleBar.Fullscreen">
        <item name="android:windowBackground">@drawable/round_dialog</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFrame">@null</item>
    </style>

    <style name="layout_match">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="layout_wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="layout_match_wrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="layout_wrap_match">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="base_line">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/colorLine</item>
    </style>
    <style name="MediaController_Button_Style">
        <item name="android:background">@drawable/bg_button_player</item>
    </style>

</resources>
